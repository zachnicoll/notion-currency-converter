{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "files": true
  },
  "compilerOptions": {
    "module": "ES2022",
    "lib": [
      "ES2022"
    ],
    "target": "ES2022",
    "baseUrl": ".",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,
  },
  "include": [
    "src/**/*.ts",
  ]
}